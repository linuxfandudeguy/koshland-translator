<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Koshi Translator</title>
  <!-- Local Bootstrap 5.3.3 CSS -->
  <link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa; /* Light background */
    }
    .container {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      padding: 20px;
      background-color: white;
    }
    h1 {
      color: #007bff; /* Bootstrap primary color */
    }
    #translationResult {
      border: 1px solid #ced4da;
      border-radius: 4px;
      padding: 10px;
      background-color: #e9ecef; /* Light gray */
    }
    #loading {
      display: none;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center"> 
      <div class="col-md-6 mt-5 pt-5">
        <h1 class="text-center font-weight-bold mb-4">Koshi Translator</h1>
        <form id="translationForm">
          <div class="form-group">
            <label for="inputText">Enter Text to Translate:</label>
            <input type="text" class="form-control" id="inputText" name="inputText" placeholder="Enter text to translate" required />
          </div>
          <div class="form-group">
            <label for="translationDirection">Translation Direction:</label>
            <select class="form-control" id="translationDirection" name="translationDirection">
              <option value="en-to-koshi">English to Koshi</option>
              <option value="koshi-to-en">Koshi to English</option>
            </select>
          </div>
          <button type="button" class="btn btn-primary mt-3" id="translateBtn">Translate</button>
        </form>
        <div id="loading">
          <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
          </div>
          <p>Translating...</p>
        </div>
        <div id="translationResult" class="mt-3"></div>
      </div>
    </div>
  </div>

 

  <!-- Local Bootstrap 5.3.3 JS -->
  <script type="text/javascript" src="/bootstrap-5.3.3-dist/js/bootstrap.min.js" is:inline></script>
  <!-- Initial script -->
  <script type="text/javascript" src="/init.bundle.min.js" is:inline></script>
